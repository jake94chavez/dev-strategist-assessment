<section class="featured-in">
  {% if section.settings.title != blank %}
    <h2 class="featured-in__heading">{{ section.settings.title }}</h2>
  {% endif %}
  <div
    class="featured-in__logos-grid"
    style="--grid-columns: {{ section.settings.grid_columns }}; --grid-columns-tablet: {{ section.settings.grid_columns_tablet }}; --grid-columns-desktop: {{ section.settings.grid_columns_desktop }};"
  >
    {% for block in section.blocks %}
      <div class="featured-in__logo-container">
        {{ block.settings.svg_logo }}
      </div>
    {% endfor %}
  </div>
</section>

{% schema %}
{
  "name": "Featured In Section",
  "settings": [
    {
      "type": "text",
      "id": "title",
      "label": "Section Heading",
      "default": "Featured In"
    },
    {
      "type": "range",
      "id": "grid_columns",
      "label": "Grid Width",
      "default": 2,
      "min": 1,
      "max": 8,
      "step": 1
    },
    {
      "type": "range",
      "id": "grid_columns_tablet",
      "label": "Grid Width (Tablet)",
      "default": 4,
      "min": 1,
      "max": 8,
      "step": 1
    },
    {
      "type": "range",
      "id": "grid_columns_desktop",
      "label": "Grid Width (Desktop)",
      "default": 8,
      "min": 1,
      "max": 8,
      "step": 1
    }
  ],
  "blocks": [
    {
      "type": "logo",
      "name": "Logo",
      "settings": [
        {
          "type": "html",
          "id": "svg_logo",
          "label": "SVG Logo"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Featured In Section"
    }
  ]
}
{% endschema %}
