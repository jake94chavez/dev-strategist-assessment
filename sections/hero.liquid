<section class="hero">
  {% if section.settings.hero_image_desktop != blank or section.settings.hero_image != blank %}
    <div class="hero__image-container">
      <picture class="hero__image-picture">
        {% if section.settings.hero_image_desktop != blank %}
          <source
            media="screen and (min-width:768px)"
            srcset="{{ section.settings.hero_image_desktop | image_url }}"
          >
        {% endif %}
        {% if section.settings.hero_image != blank %}
          <img
            class="hero__image"
            width="{{ section.settings.hero_image.width }}"
            height="{{ section.settings.hero_image.height }}"
            src="{{  section.settings.hero_image | image_url: width: section.settings.hero_image.width, height: section.settings.hero_image.height }}"
            alt="Hero Image"
          >
        {% endif %}
      </picture>
    </div>
  {% endif %}
  <div class="hero__overlay">
    <div class="hero__content">
      {% if section.settings.reviews_html != blank %}
        <div class="hero__reviews">
          {{ section.settings.reviews_html }}
        </div>
      {% endif %}
      {% if section.settings.hero_heading != blank %}
        <h1 class="hero__heading">
          {{ section.settings.hero_heading }}
        </h1>
      {% endif %}
      {% if section.settings.hero_subheading != blank %}
        <p class="hero__subheading">
          {{ section.settings.hero_subheading }}
        </p>
      {% endif %}
      {% if section.settings.btn_link != blank and section.settings.btn_text != blank %}
        <a
          class="hero__btn btn btn--primary tracking-button"
          href="{{ section.settings.btn_link }}"
          onClick="console.log('Shop Now clicked!')"
        >
          {{ section.settings.btn_text }}
        </a>
      {% endif %}
    </div>
  </div>
</section>

{% schema %}
{
  "name": "Hero Section",
  "settings": [
    {
      "type": "header",
      "content": "Images"
    },
    {
      "type": "image_picker",
      "id": "hero_image",
      "label": "Hero Image"
    },
    {
      "type": "image_picker",
      "id": "hero_image_desktop",
      "label": "Hero Image (Desktop)"
    },
    {
      "type": "header",
      "content": "Content"
    },
    {
      "type": "html",
      "id": "reviews_html",
      "label": "Reviews HTML"
    },
    {
      "type": "inline_richtext",
      "id": "hero_heading",
      "label": "Hero Heading"
    },
    {
      "type": "textarea",
      "id": "hero_subheading",
      "label": "Hero Subheading"
    },
    {
      "type": "text",
      "id": "btn_text",
      "label": "Button Text",
      "default": "Shop Now"
    },
    {
      "type": "url",
      "id": "btn_link",
      "label": "Button Link"
    },
    {
      "type": "header",
      "content": "Content Alignment"
    },
    {
      "type": "select",
      "id": "content_alignment_x",
      "label": "Horizontal Content Alignment",
      "default": "center",
      "options": [
        { "value": "flex-start", "label": "Left" },
        { "value": "center", "label": "Center" },
        { "value": "flex-end", "label": "Right" }
      ]
    },
    {
      "type": "select",
      "id": "content_alignment_y",
      "label": "Vertical Content Alignment",
      "default": "center",
      "options": [
        { "value": "flex-start", "label": "Top" },
        { "value": "center", "label": "Center" },
        { "value": "flex-end", "label": "Bottom" }
      ]
    },
    {
      "type": "select",
      "id": "content_alignment_x_desk",
      "label": "Horizontal Content Alignment (Desktop)",
      "default": "flex-start",
      "options": [
        { "value": "flex-start", "label": "Left" },
        { "value": "center", "label": "Center" },
        { "value": "flex-end", "label": "Right" }
      ]
    },
    {
      "type": "select",
      "id": "content_alignment_y_desk",
      "label": "Vertical Content Alignment (Desktop)",
      "default": "center",
      "options": [
        { "value": "flex-start", "label": "Top" },
        { "value": "center", "label": "Center" },
        { "value": "flex-end", "label": "Bottom" }
      ]
    }
  ],
  "presets": [
    {
      "name": "Hero Section"
    }
  ]
}
{% endschema %}
