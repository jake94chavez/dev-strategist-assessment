<section id="featuredProduct" class="featured-product">
  <div class="featured-product__content">
    <div class="featured-product__image-container">
      <span class="btn btn--secondary featured-product__badge">
        {{ section.settings.badge_text }}
      </span>
      <img
        src="{{ section.settings.product.featured_image | image_url: 'large' }}"
        alt="{{ section.settings.product.featured_image.alt | escape }}"
        width="{{ section.settings.product.featured_image.width }}"
        height="{{ section.settings.product.featured_image.height }}"
        class="featured-product__image"
      >
    </div>
    <div class="featured-product__details">
      <h2 class="featured-product__heading">{{ section.settings.product.title }}</h2>
      <div class="featured-product__reviews">
        <!-- REVIEW APP EMBED CODE HERE -->
      </div>
      <p class="featured-product__description">
        {{ section.settings.product.description }}
      </p>
      <ul class="featured-product__value-props-container">
        {% for block in section.blocks %}
          {% if block.type == 'value_prop' %}
            <li class="featured-product__value-prop">
              <span class="featured-product__value-prop-icon">
                <svg
                  id="Layer_1"
                  xmlns="http://www.w3.org/2000/svg"
                  width="20"
                  height="21"
                  version="1.1"
                  viewBox="0 0 20 21"
                >
                  <title>Check Mark</title>
                  <!-- Generator: Adobe Illustrator 29.3.1, SVG Export Plug-In . SVG Version: 2.1.0 Build 151)  -->
                  <defs>
                  <style>
                      .st0 {
                      fill: #ebff9d;
                      }

                      .st1 {
                      fill: #004943;
                      }
                  </style>
                  </defs>
                  <circle class="st1" cx="10" cy="10.4" r="10" />
                  <polygon
                  class="st0"
                  points="8.8 15.5 4.6 11.3 6 9.9 8.8 12.6 14.5 6.9 15.9 8.3 8.8 15.5"
                  />
                </svg>
              </span>
              <span>{{ block.settings.title }}</span>
            </li>
          {% endif %}
        {% endfor %}
      </ul>
      <div class="featured-product__buttons-container">
        <button
          class="featured-product__button btn btn--price btn--primary"
          onClick="(function(){ alert('One Time Purchase Product added to cart.'); return false; })(); return false;"
        >
          {{ section.setttings.btn_1_text }}
        </button>
        <button
          class="featured-product__button btn btn--price btn--secondary"
          onClick="(function(){ alert('Subscription Product added to cart.'); return false; })(); return false;"
        >
          {{ section.setttings.btn_1_text }}
        </button>
      </div>
      <a
        href="{{ section.settings.btn_3_url }}"
        class="featured-product__button btn btn--primary tracking-button"
        onClick="(function(){ console.log('Shop Now Clicked!'); alert('This is a demo, but on a real site, this would take you to the product page.'); return false; })(); return false;"
      >
        {{ section.settings.btn_3_text }}
      </a>
    </div>
  </div>
</section>

{% schema %}
{
  "name": "Featured Product",
  "settings": [
    {
      "type": "product",
      "id": "product",
      "label": "Product"
    },
    {
      "type": "header",
      "content": "Button 1"
    },
    {
      "type": "html",
      "id": "btn_1_text",
      "label": "Button 1 Text"
    },
    {
      "type": "header",
      "content": "Button 2"
    },
    {
      "type": "html",
      "id": "btn_2_text",
      "label": "Button 3 Text"
    },
    {
      "type": "header",
      "content": "Button 3"
    },
    {
      "type": "html",
      "id": "btn_3_text",
      "label": "Button 3 Text"
    },
    {
      "type": "url",
      "id": "btn_3_url",
      "label": "Button 3 URL"
    }
  ],
  "blocks": [
    {
      "name": "Value Prop",
      "type": "value_prop",
      "settings": [
        {
          "type": "text",
          "id": "title",
          "label": "Text"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Featured Product"
    }
  ]
}
{% endschema %}
